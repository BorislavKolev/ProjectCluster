        <script src="~/js/jquery.js"></script>
        <script src="~/js/jquery.hiddenform.js"></script>
        <script src="~/js/modernizr.js"></script>
        <script src="~/js/jquery.easing.1.3.js"></script>
        <script src="~/js/google-code-prettify/prettify.js"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/js/jquery.prettyPhoto.js"></script>
        <script src="~/js/portfolio/jquery.quicksand.js"></script>
        <script src="~/js/portfolio/setting.js"></script>
        <script src="~/js/hover/jquery-hover-effect.js"></script>
        <script src="~/js/jquery.flexslider.js"></script>
        <script src="~/js/classie.js"></script>
        <script src="~/js/cbpAnimatedHeader.min.js"></script>
        <script src="~/js/jquery.refineslide.js"></script>
        <script src="~/js/jquery.ui.totop.js"></script>
        <script src="~/js/custom.js"></script>
        <script src="https://kit.fontawesome.com/6c18f499a9.js" crossorigin="anonymous"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/lib/moment/min/moment-with-locales.min.js" asp-append-version="true"></script>
        <script src="~/js/jquery.js"></script>
        <script src="~/js/jquery.hiddenform.js"></script>
        <script src="~/js/modernizr.js"></script>
        <script src="~/js/jquery.easing.1.3.js"></script>
