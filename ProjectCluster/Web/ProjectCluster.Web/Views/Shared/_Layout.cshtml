@using ProjectCluster.Common
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Clean responsive bootstrap website template">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@GlobalConstants.SystemName</title>

    <environment names="Development">
        <!-- styles -->
        <link href="~/css/bootstrap.css" rel="stylesheet">
        <link href="~/css/bootstrap-responsive.css" rel="stylesheet">
        <link href="~/css/docs.css" rel="stylesheet">
        <link href="~/css/prettyPhoto.css" rel="stylesheet">
        <link href="~/js/google-code-prettify/prettify.css" rel="stylesheet">
        <link href="~/css/flexslider.css" rel="stylesheet">
        <link href="~/css/refineslide.css" rel="stylesheet">
        <link href="~/css/font-awesome.css" rel="stylesheet">
        <link href="~/css/animate.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600,700" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet">
        <link href="~/color/default.css" rel="stylesheet">
        <!-- icons -->
        <link rel="shortcut icon" href="https://res.cloudinary.com/sharwinchester/image/upload/v1587668226/Administrative/green_uo3jdr.png">
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/ico/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/ico/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/ico/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="~/ico/apple-touch-icon-57-precomposed.png">
    </environment>
    <environment names="Staging,Production">
        <!-- styles -->
        <link href="~/css/bootstrap.css" rel="stylesheet">
        <link href="~/css/bootstrap-responsive.css" rel="stylesheet">
        <link href="~/css/docs.css" rel="stylesheet">
        <link href="~/css/prettyPhoto.css" rel="stylesheet">
        <link href="~/js/google-code-prettify/prettify.css" rel="stylesheet">
        <link href="~/css/flexslider.css" rel="stylesheet">
        <link href="~/css/refineslide.css" rel="stylesheet">
        <link href="~/css/font-awesome.css" rel="stylesheet">
        <link href="~/css/animate.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600,700" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet">
        <link href="~/color/default.css" rel="stylesheet">
        <!-- icons -->
        <link rel="shortcut icon" href="https://res.cloudinary.com/sharwinchester/image/upload/v1587668226/Administrative/green_uo3jdr.png">
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/ico/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/ico/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/ico/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="~/ico/apple-touch-icon-57-precomposed.png">
    </environment>
</head>
<body>

    <header>
        <!-- Navbar
    ================================================== -->

        <div class="cbp-af-header">
            <div class=" cbp-af-inner">
                <div class="container">

                    <div class="row">

                        <div class="span4">
                            <!-- logo -->
                            <div class="logo">
                                <h1><a asp-area="" asp-controller="Home" asp-action="Index">ProjectCluster</a></h1>
                                <!-- <img src="assets/img/logo.png" alt="" /> -->
                            </div>
                            <!-- end logo -->
                        </div>

                        <div class="span8">
                            <!-- top menu -->
                            <div class="navbar">
                                <div class="navbar-inner">
                                    <nav>
                                        <ul class="nav topnav">
                                            @if (this.User.Identity.IsAuthenticated)
                                            {
                                            <li class="dropdown active">
                                                <a asp-area="" asp-controller="Projects" asp-action="Create">Create Project</a>
                                            </li>
                                            }
                                            <li class="dropdown">
                                                <a asp-area="" asp-controller="Home" asp-action="Index">Categories</a>
                                                <ul class="dropdown-menu">
                                                    <li><a href="/Categories/Animals">Animals</a></li>
                                                    <li><a href="/Categories/Art">Art</a></li>
                                                    <li><a href="/Categories/Cars">Cars</a></li>
                                                    <li><a href="/Categories/DIY">DIY</a></li>
                                                    <li><a href="/Categories/Food">Food</a></li>
                                                    <li><a href="/Categories/Gaming">Gaming</a></li>
                                                    <li><a href="/Categories/Gardening">Gardening</a></li>
                                                    <li><a href="/Categories/Music">Music</a></li>
                                                    <li><a href="/Categories/Photography">Photography</a></li>
                                                    <li><a href="/Categories/Programming">Programming</a></li>
                                                    <li><a href="/Categories/Videography">Videography</a></li>
                                                    <li><a href="/Categories/Writing">Writing</a></li>
                                                </ul>
                                            </li>
                                            @if (!this.User.Identity.IsAuthenticated)
                                            {
                                            <li>
                                                <a asp-area="Identity" asp-page="/Account/Register">Register</a>
                                            </li>
                                            <li>
                                                <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                                            </li>
                                            }
                                            @if (this.User.Identity.IsAuthenticated)
                                            {
                                            <li>
                                                <a href="/Profile/@this.User.Identity.Name">Profile</a>
                                            </li>
                                            @if (this.User.IsInRole("Administrator"))
                                                {
                                            <li>
                                                <a asp-area="Administration" asp-controller="Categories" asp-action="Index">Admin Dashboard</a>
                                            </li>
                                                }
                                            <li class="dropdown">
                                                <a>Account</a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                                                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </li>
                                            }
                                        </ul>
                                    </nav>
                                </div>
                            </div>

                            <!-- end menu -->
                        </div>
                    </div>
                    <partial name="_CookieConsentPartial" />
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer>
        
        <div class="subfooter">
            <div class="container">
                <div class="row">
                    <div class="span6">
                        <p>
                            &copy; ProjectCluster - All right reserved
                        </p>
                    </div>
                    <div class="span6">
                        <div class="pull-right">
                            <div class="credits">
                                <!--
                              All the links in the footer should remain intact.
                              You can delete the links only if you purchased the pro version.
                              Licensing information: https://bootstrapmade.com/license/
                              Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/buy/?theme=Plato
                            -->
                                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                            </div>
                            <div class="credits">
                                Icon made by <a href="https://www.flaticon.com/authors/good-ware" title="Good Ware">Good Ware</a> from <a href="https://www.flaticon.com/" title="Flaticon"> www.flaticon.com</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
