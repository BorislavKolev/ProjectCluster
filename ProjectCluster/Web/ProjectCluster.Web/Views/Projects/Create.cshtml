@model ProjectCluster.Web.ViewModels.Projects.ProjectCreateInputModel
@{
    ViewData["Title"] = "Create new project";
}

<h1>@this.ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="span4">
            <h3>Get <strong>in touch</strong></h3>
        </div>
        <div class="span8">
            <ul class="breadcrumb notop">
                <li><a href="#">Home</a><span class="divider">/</span></li>
                <li class="active">Contact</li>
            </ul>
        </div>
    </div>
</div>
 
<div class="container">
    <form method="post" class="contactForm" asp-action="Create">
        <div class="row">
            <div class="span10 form-group">
                <input asp-for="Title" type="text" class="form-control" name="title" id="title" placeholder="Title" />
                <span asp-validation-for="Title"></span>
            </div>

            <div class="span10 form-group">
                <textarea asp-for="Content" class="form-control" name="content" rows="10" placeholder="Content"></textarea>
                <span asp-validation-for="Content"></span>
            </div>

            <div class="span10 form-group">
                <input asp-for="CategoryId" type="number" name="categoryId" class="form-control" id="categoryId" placeholder="Category" />
                <span asp-validation-for="CategoryId"></span>
            </div>

            <div class="span10 form-group">
                <input asp-for="ProjectStatus" type="text" class="form-control" name="projectStatus" id="projectStatus" placeholder="Project Status" />
                <span asp-validation-for="ProjectStatus"></span>
            </div>

            <div class="span10 form-group">
                <input asp-for="Progress" type="text" class="form-control" name="progress" id="progress" placeholder="Progress" />
                <span asp-validation-for="Progress"></span>
                <div class="text-center">
                    <button class="btn btn-color btn-rounded" type="submit">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>