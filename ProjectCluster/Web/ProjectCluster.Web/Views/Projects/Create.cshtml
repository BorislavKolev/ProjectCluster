@model ProjectCluster.Web.ViewModels.Projects.ProjectCreateInputModel
@{
    ViewData["Title"] = "Create new project";
    var categories = Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<h1>@this.ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="span4">
            <h3>Get <strong>in touch</strong></h3>
        </div>
        <div class="span8">
            <ul class="breadcrumb notop">
                <li><a href="#">Home</a><span class="divider">/</span></li>
                <li class="active">Contact</li>
            </ul>
        </div>
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>


<div class="container">
    <form method="post" class="contactForm" asp-action="Create">
        <div class="row">           
            <div class="span10 form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" type="text" class="form-control"/>
                <span asp-validation-for="Title"></span>
            </div>

            <div class="span10 form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="15"></textarea>
                <span asp-validation-for="Content"></span>
            </div>
            <hr>
            <div class="span10 form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="categories" class="form-control"></select>
                <span asp-validation-for="CategoryId"></span>
            </div>

            <div class="span10 form-group">
                <label asp-for="ProjectStatus"></label>
                <select asp-for="ProjectStatus" asp-class="form-control">
                    <option value="Finished">Finished</option>
                    <option value="InProgress">In progress</option>
                </select>
                <span asp-validation-for="ProjectStatus"></span>
            </div> 

            <div class="span10 form-group">
                <label class="optional inprogress" style="display:none;" asp-for="Progress"></label>
                <input asp-for="Progress" type="number" class="optional inprogress" style="display:none;" class="hidden-txt" class="form-control">
                <span asp-validation-for="Progress"></span>
                <div class="text-center">
                    <button class="btn btn-color btn-rounded" type="submit">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>