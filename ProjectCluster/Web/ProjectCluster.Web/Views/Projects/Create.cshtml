@model ProjectCluster.Web.ViewModels.Projects.ProjectCreateInputModel
@{
    ViewData["Title"] = "Create new project";
}

<h1>@this.ViewData["Title"]</h1>

<div class="container">
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>


<div class="container">
    <form method="post"  class="contactForm" asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="span10 form-group">
                <label class="control-label" asp-for="Title"></label>
                <input asp-for="Title" type="text" class="form-control" />
                <span asp-validation-for="Title"></span>
            </div>

            <div class="span10 form-group">
                <label class="control-label" asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="15"></textarea>
                <span asp-validation-for="Content"></span>
            </div>

            <div class="span10 form-group" enctype="multipart/form-data">
                <hr />
                <label class="control-label" asp-for="Pictures"></label>
                <input asp-for="Pictures" type="file" name="pictures" multiple class="form-control" />
            </div>

            <div class="span10 form-group">
                <label class="control-label" asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    <option value="1">Animals</option>
                    <option value="2">Art</option>
                    <option value="3">Cars</option>
                    <option value="4">DIY</option>
                    <option value="5">Food</option>
                    <option value="6">Gaming</option>
                    <option value="7">Gardening</option>
                    <option value="8">Music</option>
                    <option value="9">Photography</option>
                    <option value="10">Programming</option>
                    <option value="11">Videography</option>
                    <option value="12">Writing</option>
                </select>
                <span asp-validation-for="CategoryId"></span>
            </div>

            <div class="span10 form-group">
                <label class="control-label" asp-for="ProjectStatus"></label>
                <select asp-for="ProjectStatus" asp-class="form-control">
                    <option value="Finished">Finished</option>
                    <option value="InProgress">In progress</option>
                </select>
                <span asp-validation-for="ProjectStatus"></span>
            </div>

            <div class="span10 form-group">
                <label class="control-label" class="optional inprogress" style="display:none;" asp-for="Progress"></label>
                <input asp-for="Progress" type="number" class="optional inprogress" style="display:none;" class="hidden-txt" class="form-control">
                <span asp-validation-for="Progress"></span>
                <div class="text-center">
                    <button class="btn btn-color btn-rounded" type="submit">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>