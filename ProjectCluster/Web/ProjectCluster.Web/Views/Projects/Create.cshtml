@model ProjectCluster.Web.ViewModels.Projects.ProjectCreateInputModel
@{
    ViewData["Title"] = "Create new project";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="Create">
    <input asp-for="Title" />
    <input asp-for="Content" />
    <input asp-for="CategoryId" />
    <input asp-for="ProjectStatus" />
    <input asp-for="Progress" />

    <input type="submit" class="btn btn-primary">
</form>
