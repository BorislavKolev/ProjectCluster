                <!-- comment form -->
                <div class="comment-post">
                    <h4>Leave a comment</h4>
                    <form action="" method="post" class="comment-form" name="comment-form">
                        <div class="row">
                            <div class="span4">
                                <label>Name <span>*</span></label>
                                <input type="text" placeholder="Your name" />
                            </div>
                            <div class="span4">
                                <label>Email <span>*</span></label>
                                <input type="text" placeholder="Your email" />
                            </div>
                            <div class="span8">
                                <label>URL</label>
                                <input type="text" placeholder="Your website url" />
                            </div>
                            <div class="span8">
                                <label>Comment <span>*</span></label>
                                <textarea rows="9" placeholder="Your comment"></textarea>
                                <button class="btn btn-color btn-rounded" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>