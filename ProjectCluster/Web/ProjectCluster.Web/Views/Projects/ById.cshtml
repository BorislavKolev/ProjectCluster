                        </form>
                    </div>
                    <div class="widget">
                        <h4>Categories</h4>
                        <ul>
                            @foreach (var category in Model.SidebarCategories)
                            {
                                <li><i class="@category.IconName"></i><a href="@category.CategoryUrl"><span>  @category.Name (@category.ProjectsCount)</span></a></li>
                            }
                        </ul>
                    </div>
                    <div class="widget">
                        <h4>Recent projects</h4>
                        <ul class="recent-posts">
